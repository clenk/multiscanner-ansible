# Ansible controller
[controller]
ms-ansible.dev.xbis

# UI. There should only be 1 host
[webserver]
ms-web.dev.xbis

# ReST service. There should only be 1 host, and it can be the same as the webserver
[restserver]
ms-rest.dev.xbis

# RabbitMQ message server for queueing/distributing tasks. There should only be 1 host
[task_broker]
ms-broker.dev.xbis

# Elasticsearch cluster. At least 1 host, more is preferred
[elasticsearch]
ms-es1.dev.xbis
ms-es2.dev.xbis

# Kibana. Optional. If implemeted, specify one or more hosts.
# [kibana]
# kibana.dev.xbis

# PostgreSQL DB for storing task info. There should only be 1 host
[task_db]
ms-task-db.dev.xbis

# MultiScanner distributed workers. At least 1 host, more is preferred
[ms_worker]
ms-worker1.dev.xbis
ms-worker2.dev.xbis
ms-worker3.dev.xbis
ms-worker4.dev.xbis

# DFS host. You need at least 2 hosts here
[dfs_server]
ms-worker1.dev.xbis
ms-worker2.dev.xbis
ms-worker3.dev.xbis
ms-worker4.dev.xbis
